<p id="notice"><%= notice %></p>


<div class="card">
  <div class="card-image">
    <figure class="image is-2by1">
      <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
    </figure>
  </div>
  <div class="card-content">
    <% booking.passengers.each do |p|%>
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><%= p.first_name%> <%=p.last_name%></p>
          <p class="subtitle is-6"><%=p.email%></p>
        </div>
      </div>
    <%end%>

    <div class="content">
      <%= booking.flight.from_airport.code%> to <%= booking.flight.to_airport.code %>
      <br>
      Take off
        
      <%= booking.flight.duration / 60.to_i %> hours and <%=booking.flight.duration % 60.to_i%> minutes
      <br>
      <br>
      <time datetime="2016-1-1"><%=booking.flight.takeoff%></time>
       <% booking.passengers.each do |p|%>
        <%= p.first_name%> <%=p.last_name%> <%=p.email%>
      <%end%>
    </div>
  <div class="control">
  <button class="button is-warning">
    <%= link_to "Proceed to pay for tickets", new_charge_path(booking: booking) %>
  </button>
</div>      

  </div>

</div>


