<h1>results</h1>

<%= form_for :booking, url: new_booking_path, method: "GET", local: true do |f| %>
  <% @flights.each do |flt|%>
    <%=flt.from_airport.city%> <%=flt.from_airport.state%> to <%=flt.to_airport.city%> <%=flt.to_airport.state%>
    <%=flt.from_airport.code%> to <%=flt.to_airport.code%> 
    <%= f.radio_button :flight_id, flt.id %>
  <%end%>

  
<%= f.submit "Select Flight"%>
<%end%>