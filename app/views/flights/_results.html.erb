<h1 class="title">results</h1>
<table class="table">
  <thead>
    <th>Departure</th>
    <th>Arrival</th>
    <th>Take off</th>
    <th>Duration</th>
    <th>Select for booking</th>
  </thead>

  <tbody>

    <%= form_for :booking, url: new_booking_path, method: "GET", local: true do |f| %>
      <%= f.hidden_field :num_passenger, value: params[:flight][:num_passenger]%>

      <% @flights.each do |flt|%>
        <tr>
          <td>
            <%=flt.from_airport.city%> <%=flt.from_airport.state%> <%=flt.from_airport.code%>
          </td>
          <td>
          <%=flt.to_airport.city%> <%=flt.to_airport.state%>  <%=flt.to_airport.code%> 
          </td>

          <td>
            <%=flt.takeoff%>
          </td>

          <td>
            <%=flt.duration / 60.to_i %> hrs and <%=flt.duration % 60.to_i %> minutes
          </td>

          <td>
            <%= f.radio_button :flight_id, flt.id %>
          </td>
        
        </tr>
      <%end%>

  </tbody>
</table>

<div class="control">
  <%= f.submit "Select Flight", class: "button is-primary"%>
</div>

<%end%>

