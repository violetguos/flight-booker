
<div class="card">
  <div class="card-content">
  
  <span>
    This is built with Stripe's test API key! Proceed with the default credit
    card provided below!
  </span>
  <%= form_tag charges_path do %>
    <article class="message is-warning">
      <div class="message-header">
        Pay for your booking
      </div>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount message-body">
        <span>
          Amount: $5.00
        </span>
      </label>
    </article>

     <div class="card-fields">
    <span class="payment-errors"></span>

    <div class="form-row">
      <label>
        <span>Card Number</span>
        <input value="4242 4242 4242 4242" type="text" size="20" data-stripe="number"/>
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>CVC</span>
        <input value="123" type="text" size="4" data-stripe="cvc"/>
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Expiration (MM/YYYY)</span>
        <input value="12" type="text" size="2" data-stripe="exp-month"/>
      </label>
      <span> / </span>
      <input value="2020" type="text" size="4" data-stripe="exp-year"/>
    </div>
  </div>

  <button type="submit" class="button is-warning">Submit Payment</button>
  <% end %>

  </div>

</div>
