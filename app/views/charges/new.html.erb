

  <%= form_tag charges_path do %>
    <article class="message">
      <div class="message-header">
        Pay for your booking
      </div>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount message-body">
        <span>Amount: $5.00</span>
      </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"  data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="Booking tickets" data-amount="500" data-locale="auto"></script>
  <% end %>

